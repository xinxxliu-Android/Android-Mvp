<?xml version="1.0" encoding="utf-8"?>
<com.lt.widget.g.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="@mipmap/global_window_bg">

    <com.lt.widget.v.TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_228"
        android:layout_marginEnd="@dimen/dp_228"
        android:layout_marginTop="@dimen/dp_26"
        android:text="警告"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_24"
        android:textStyle="bold" />

    <com.lt.widget.v.TextView
        android:layout_width="wrap_content"
        android:id="@+id/info"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_22"
        android:layout_marginTop="@dimen/dp_22"
        />
    <com.lt.widget.g.LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginStart="@dimen/dp_70"
        android:layout_marginBottom="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_70"
        android:layout_height="wrap_content">
        <com.lt.widget.v.Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_global_window_btn_cancel_bg"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15" />
        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            />
        <com.lt.widget.v.Button
            android:id="@+id/confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_global_window_btn_confirm_bg"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15" />
    </com.lt.widget.g.LinearLayout>
</com.lt.widget.g.LinearLayout>